
@model EmployeeViewModel
@inject IUnitOfWork unitOfWork
@{
    ViewBag.Department = unitOfWork.DepartmentRepository.GetAll();
    var department = new SelectList(ViewBag.Department/* ViewData["Department"] as IEnumerable<Department> */,nameof(Department.Id),nameof(Department.Name));
}
<div class="form-group">
    <label class="col-form-label" asp-for="Name"></label>
    <input class="form-control" asp-for="Name" />
    <span asp-validation-for="Name" class="text-danger"></span>
</div>

<div class="form-group">
    <label class="col-form-label" asp-for="Age"></label>
    <input class="form-control" asp-for="Age" />
    <span asp-validation-for="Age" class="text-danger"></span>

</div>

<div class="form-group">
    <label class="col-form-label" asp-for="Address"></label>
    <input class="form-control" asp-for="Address" />
    <span asp-validation-for="Address" class="text-danger"></span>
</div>

<div class="form-group">
    <label class="col-form-label" asp-for="Salary"></label>
    <input class="form-control" asp-for="Salary" />
    <span asp-validation-for="Salary" class="text-danger"></span>

</div>

<div class="form-group">
    <label class="col-form-label" asp-for="Email"></label>
    <input type="email" class="form-control" asp-for="Email" />
    <span asp-validation-for="Email" class="text-danger"></span>

</div>

<div class="form-group">
    <label class="col-form-label" asp-for="Phone"></label>
    <input type="number" class="form-control" asp-for="Phone" />
</div>

<div class="form-group">
    <label class="col-form-label" asp-for="HireDate"></label>
    <input class="form-control" asp-for="HireDate" />
</div>

<div class="form-group">
    <label class="col-form-label" asp-for="Gender"></label>
    <input class="form-control" asp-for="Gender" />
</div>

<div class="form-group">

    <label class="col-form-label" asp-for="Department"></label>
    <select class="form-control" asp-items="department" asp-for="DepartmentId">
        <option>--Select-Department--</option>
    </select>
        <span asp-validation-for="DepartmentId" class="text-danger"></span>
</div>

<div>
    <label asp-for="Image" class="col-form-label"></label>
    <input type="file" asp-for="Image" class="form-control-file" />
</div>

<div class="form-group">
    <div class="d-inline-block">
        <input type="checkbox" class="form-check-input" asp-for="IsActive" />
        <label class="form-check-label" asp-for="IsActive"></label>
    </div>

    <div class="d-inline-block ml-4">
        <input type="checkbox" class="form-check-input" asp-for="IsDeleted" />
        <label class="form-check-label" asp-for="IsDeleted"></label>
    </div>
</div>

