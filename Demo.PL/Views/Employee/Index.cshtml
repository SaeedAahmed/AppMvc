@model IEnumerable<EmployeeViewModel>
@{
    ViewData["Title"] = "Index";
}

@if (!string.IsNullOrEmpty(TempData["message"] as string))
{
    <div class="alert alert-success">
        @TempData["message"]
    </div>
}

<h1 class="my-3 text-center">All Employees</h1>
<a asp-action="Create" class="btn btn-success mb-3">Add New Employee</a>

<form class="mb-5" asp-action="Index" asp-controller="Employee">
    <div class="row">
        <div class="col-md-10">
            <input placeholder="Search for employee by name" name="SearchValue" class="form-control" />
        </div>
        <div class="col-md-2">
            <input type="submit" value="Search" class="btn btn-success w-100" />
        </div>
    </div>
</form>

@if (Model.Any())
{
    <div class="row">
        @foreach (var Employee in Model)
        {
            <div class="col-md-4 my-2">
                <div class="card shadow-sm hover-card">
                    <div class="text-center">
                        <img src="~/Files/Images/@Employee.ImageName" class="img-fluid rounded-circle employee-img" alt="Employee Image" />
                    </div>
                    <div class="card-body text-center">
                        <h5 class="card-title">@Employee.Name</h5>
                        <p class="card-text"><strong>Department:</strong> @Employee.Department?.Name</p>
                        <p class="card-text"><strong>Age:</strong> @Employee.Age</p>
                        <p class="card-text"><strong>Email:</strong> @Employee.Email</p>
                        <p class="card-text"><strong>Phone:</strong> @Employee.Phone</p>
                        <p class="card-text"><strong>Hire Date:</strong> @Employee.HireDate.ToString("dd/MM/yyyy")</p>

                        <p class="card-text">
                            <strong>Active:</strong>
                            @if (Employee.IsActive)
                            {
                                <i class="fas fa-check-circle text-success"></i>
                            }
                            else
                            {
                                <i class="fas fa-times-circle text-danger"></i>
                            }
                        </p>

                        <p class="card-text">
                            <strong>Deleted:</strong>
                            @if (Employee.IsDeleted)
                            {
                                <i class="fas fa-check-circle text-success"></i>
                            }
                            else
                            {
                                <i class="fas fa-times-circle text-danger"></i>
                            }
                        </p>

                        <div class="d-flex justify-content-around mt-3">
                            <div>
                                <a asp-action="Details" asp-route-id="@Employee.Id" class="btn btn-info btn-sm hover-button">
                                    <i class="fas fa-info-circle"></i>

                                </a>
                            </div>
                            <div>
                                <a asp-action="Edit" asp-route-id="@Employee.Id" class="btn btn-warning btn-sm hover-button">
                                    <i class="fas fa-edit"></i>
                                </a>
                            </div>
                            <div>
                                <a asp-action="Delete" asp-route-id="@Employee.Id" class="btn btn-danger btn-sm hover-button">
                                    <i class="fas fa-trash"></i>
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
}
else
{
    <div class="alert alert-warning text-center">
        <p>There Are No Employees</p>
    </div>
}

<style>
    .hover-card {
        transition: transform 0.5s ease, box-shadow 0.5s ease;
        border-radius: 10px;
    }

        .hover-card:hover {
            transform: scale(1.05);
        }

    .employee-img {
        height: 150px;
        width: 150px;
        border: 4px solid #007bff;
        margin-top: -20px;
    }
    .hover-button {
        position: relative;
        transition: background-color 0.5s ease, transform 0.5s ease;
        width: 80px;
    }

        .hover-button:hover {
            transform: scale(1.05);
        }


</style>
