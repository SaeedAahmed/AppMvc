@model IEnumerable<EmployeeViewModel>
@{
    ViewData["Title"] = "Index";
}
@* <div class="alert alert-success">
    @ViewData["message"]
</div> *@
@if (!string.IsNullOrEmpty(TempData["message"] as string))
{
    <div class="alert alert-success">
        @TempData["message"]
    </div>
}
<h1 class="my-3">All Employee</h1>
<a asp-controller="Employee" asp-action="Create" class="btn btn-primary my-3">Add New Employee</a>

<form class="m-4" asp-action="Index" asp-controller="Employee">

    <div class="row">
        <div class="col-10">
            <input placeholder="Search for employee by name" name="SearchValue" class="form-control" />
        </div>
        <div class="col-2">
            <input type="submit" value="Search" class="btn btn-success" />
        </div>
    </div>
</form>
@if (Model.Count() > 0)
{
    <table class="table table-striped table-hover">


        <thead>
        <th>@Html.DisplayNameFor(E => E.Name)</th>
        <th>@Html.DisplayNameFor(E => E.Age)</th>
        <th>@Html.DisplayNameFor(E => E.Image)</th>

        <th>@Html.DisplayNameFor(E => E.Address)</th>
        <th>@Html.DisplayNameFor(E => E.Salary)</th>
        <th>@Html.DisplayNameFor(E => E.Department)</th>
        <th>@Html.DisplayNameFor(E => E.IsActive)</th>
        <th>@Html.DisplayNameFor(E => E.Email)</th>
        <th>@Html.DisplayNameFor(E => E.Phone)</th>
        <th>@Html.DisplayNameFor(E => E.HireDate)</th>
        <th>@Html.DisplayNameFor(E => E.IsDeleted)</th>
        <th>@Html.DisplayNameFor(E => E.Gender)</th>
        <th>Details</th>
        <th>Update</th>
        <th>Delete</th>
        </thead>
        <tbody>
            @foreach (var Employee in Model)
            {
                <tr>
                    <td>@Employee.Name</td>
                    <td>@Employee.Age</td>
                    <td><img src="~/Files/Images/@Employee.ImageName" class="img-fluid rounded" height="40" width="40" /></td>
                    <td>@Employee.Address</td>
                    <td>@Employee.Salary</td>
                    <td>@Employee.Department?.Name</td>
                    <td>@Employee.IsActive</td>
                    <td>@Employee.Email</td>
                    <td>@Employee.Phone</td>
                    <td>@Employee.HireDate</td>
                    <td>@Employee.IsDeleted</td>
                    <td>@Employee.Gender</td>
                   <partial name="_ButtonPartial" model="@Employee.Id"></partial>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <div class="m-3 alert alert-warning">
        <p>There Is No Employees</p>
    </div>
}