@model Department
@{
    ViewData["Title"] = "Delete";
}

<h1 class="my-3">Are You Sure You Want To Delete This Department!?</h1>

<form asp-action="Delete" asp-route-id="@Model.Id">
    <input asp-for="Id" hidden />

    <div class=" form-group">
        <label asp-for="Code" class="col-form-label"></label>
        <input class="form-control" asp-for="Code" readonly />
    </div>
    <div class=" form-group">
        <label asp-for="Name" class="col-form-label"></label>
        <input class="form-control" asp-for="Name" readonly />
    </div>
    <div class=" form-group">
        <label asp-for="DateOfCreation" class="col-form-label"></label>
        <input class="form-control" asp-for="DateOfCreation" readonly />
    </div>

    <div class="my-3">
        <input type="submit" value="Delete" class="btn btn-danger" /> 
        <a asp-action="Index" class="btn btn-light">Cancel</a>
    </div>
</form>

