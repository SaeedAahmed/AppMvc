@model DepartmentViewModel
@{
    ViewData["Title"] = "Edit";
}

<h1 class="my-3">Edit Department</h1>

<form asp-action="Edit" asp-controller="Department">
    <input asp-for="Id" hidden />
    <partial name="partialView/CreateEditDepartmentPartial"></partial>
    <div class="mt-3">
        <input class="btn btn-primary" value="Save" type="submit" />
        <a asp-action="Index" asp-controller="Department" class="btn btn-light"> Back to List</a>
    </div>
</form>

@section ValidateSection
{
    <partial name="_ValidationScriptsPartial"></partial>
}