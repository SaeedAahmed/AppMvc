@model Department
@{
    ViewData["Title"] = "Edit";
}

<h1 class="my-3">Edit Department</h1>

<form asp-action="Edit" asp-controller="Department">
    <input asp-for="Id" hidden />
    <div class="form-group">
        <label class="col-form-label" asp-for="Code"></label>
        <input class="form-control" asp-for="Code" />
        <span asp-validation-for="Code" class="text-danger"></span>
    </div>
    <div class="form-group">

        <label class="col-form-label" asp-for="Name"></label>
        <input class="form-control" asp-for="Name" />
        <span asp-validation-for="Name" class="text-danger"></span>

    </div>
    <div class="form-group">

        <label class="col-form-label" asp-for="DateOfCreation"></label>
        <input class="form-control" asp-for="DateOfCreation" />
        <span asp-validation-for="DateOfCreation" class="text-danger"></span>
    </div>
    <div class="mt-3">
        <input class="btn btn-primary" value="Save" type="submit" />
        <a asp-action="Index" asp-controller="Department" class="btn btn-light"> Back to List</a>
    </div>
</form>

