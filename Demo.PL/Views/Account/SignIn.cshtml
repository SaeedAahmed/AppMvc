@model SignInViewModel
@{
	ViewData["Title"] = "SignIn";
    Layout = "_AythLayout";
}

<div class="main-agileinfo">
<div class="agileits-top">
	<form asp-action="SignIn">
		<div asp-validation-summary="All"></div>
		<input class="text email" type="email" asp-for="Email" placeholder="Email" required="">
		<input class="text" type="password" asp-for="Password" placeholder="Password" required="">
		<div class="wthree-text">
			<label class="anim my-2">
				<input type="checkbox" asp-for="RememberMe" class="checkbox">
				<span>Remember Me !</span>
			</label>
			<div class="clear"> </div>
		</div>
		<input type="submit" value="LOGIN">
	</form>
	<p>Don't have an Account? <a asp-action="SignUp"> Register Now!</a></p>
	<p><a asp-action="ForgetPassword" asp-controller="Account" class="text-white"> Forget Password ?!</a></p>
</div>
</div>
@section ValidateSection
{
	<partial name="_ValidationScriptsPartial"></partial>
}

