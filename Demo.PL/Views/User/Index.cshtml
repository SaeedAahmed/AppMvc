@model IEnumerable<UserViewModel>;
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1 class="my-3 text-center">All Users</h1>


@if (TempData["Message"] != null)
{
    <div class="alert alert-primary mt-3">
        <h6>@TempData["Message"]</h6>
    </div>
}

@if (Model?.Count() > 0)
{
    <table class="table table-bordered table-hover mt-5">
        <thead class="table-dark">
            <tr>
                <th>@Html.DisplayNameFor(User => User.Id)</th>
                <th>@Html.DisplayNameFor(User => User.FName)</th>
                <th>@Html.DisplayNameFor(User => User.LName)</th>
                <th>@Html.DisplayNameFor(User => User.PhoneNumber)</th>
                <th>@Html.DisplayNameFor(User => User.Email)</th>
                <th>@Html.DisplayNameFor(User => User.Roles)</th>
                <th style="width: 200px;">Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var User in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(e => User.Id)</td>
                    <td>@Html.DisplayFor(e => User.FName)</td>
                    <td>@Html.DisplayFor(e => User.LName)</td>
                    <td>@Html.DisplayFor(e => User.PhoneNumber)</td>
                    <td>@Html.DisplayFor(e => User.Email)</td>
                    <td>@string.Join(", ", User.Roles)</td> 
                    <td>
                        <div class="d-flex justify-content-around">
                            <a asp-action="Details" asp-route-id="@User.Id" class="btn btn-info btn-sm mx-1" title="Details">
                                <i class="fas fa-info-circle"></i> Details
                            </a>
                            <a asp-action="Edit" asp-route-id="@User.Id" class="btn btn-warning btn-sm mx-1" title="Update">
                                <i class="fas fa-edit"></i> Update
                            </a>
                            <a asp-action="Delete" asp-route-id="@User.Id" class="btn btn-danger btn-sm mx-1" title="Delete">
                                <i class="fas fa-trash"></i> Delete
                            </a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <div class="mt-5 alert alert-danger text-center">
        <h3>There are no Users</h3>
    </div>
}
