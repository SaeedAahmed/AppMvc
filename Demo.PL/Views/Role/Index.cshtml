@model IEnumerable<RoleViewModel>;
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1 class="my-3 text-center">All Roles</h1> 

<a asp-action="Create" class="btn btn-success mb-3">Add New Role</a>
@if (Model?.Count() > 0)
{
    <table class="table table-bordered table-hover mt-5">
        <thead class="table-dark">
            <tr>
                <th>@Html.DisplayNameFor(Role => Role.Id)</th>
                <th>@Html.DisplayNameFor(Role => Role.RoleName)</th>
                <th style="width: 200px;">Actions</th> 
            </tr>
        </thead>
        <tbody>
            @foreach (var role in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(e => role.Id)</td>
                    <td>@Html.DisplayFor(e => role.RoleName)</td>
                    <td>
                        <div class="d-flex justify-content-around">
                            <a asp-action="Details" asp-route-id="@role.Id" class="btn btn-info btn-sm mx-1" title="Details">
                                <i class="fas fa-info-circle"></i> Details
                            </a>
                            <a asp-action="Edit" asp-route-id="@role.Id" class="btn btn-warning btn-sm mx-1" title="Update">
                                <i class="fas fa-edit"></i> Update
                            </a>
                            <a asp-action="Delete" asp-route-id="@role.Id" class="btn btn-danger btn-sm mx-1" title="Delete">
                                <i class="fas fa-trash"></i> Delete
                            </a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <div class="mt-5 alert alert-danger text-center">
        <h3>There are no Roles</h3>
    </div>
}
